    <com.app.gco.instructions.CirclePageIndicator android:layout_marginBottom="2dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/circleIndicator" android:layout_gravity="bottom|center_horizontal"
        />   

</FrameLayout>
